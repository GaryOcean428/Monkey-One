# Modern Husky v9+ format

# Exit on any error
set -e

echo "ğŸ” Running STRICT pre-commit checks..."

# Run lint-staged for formatting and linting
echo "ğŸ“ Running lint-staged..."
pnpm lint-staged

# Strict type checking
echo "ğŸ” Strict type checking..."
pnpm run type-check:strict

# Security audit (strict)
echo "ğŸ”’ Security audit (strict)..."
pnpm audit --audit-level moderate --production

# Check for secrets in staged files (strict)
echo "ğŸ” Checking for secrets (strict)..."
git diff --cached --name-only | xargs grep -l -E "(api_key|secret|password|token)" 2>/dev/null && {
  echo "âŒ Potential secrets detected in staged files!"
  echo "Please review and remove any sensitive information before committing."
  exit 1
} || true

# Run tests
echo "ğŸ§ª Running tests..."
pnpm run test:fast

echo "âœ… STRICT pre-commit checks passed!"