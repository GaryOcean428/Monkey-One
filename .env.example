# ⚠️ SECURITY WARNING ⚠️
# Variables prefixed with VITE_ are exposed to the client-side code.
# DO NOT store sensitive credentials here - use server-side environment variables instead.
# This file serves as a template - copy to .env and replace placeholders with actual values.

# Firebase Configuration
# Required for Firebase services integration
VITE_FIREBASE_API_KEY=INSERT_FIREBASE_API_KEY_HERE
VITE_FIREBASE_AUTH_DOMAIN=INSERT_FIREBASE_AUTH_DOMAIN_HERE
VITE_FIREBASE_PROJECT_ID=INSERT_FIREBASE_PROJECT_ID_HERE
VITE_FIREBASE_STORAGE_BUCKET=INSERT_FIREBASE_STORAGE_BUCKET_HERE
VITE_FIREBASE_MESSAGING_SENDER_ID=INSERT_FIREBASE_MESSAGING_SENDER_ID_HERE
VITE_FIREBASE_APP_ID=INSERT_FIREBASE_APP_ID_HERE
VITE_FIREBASE_DATABASE_URL=INSERT_FIREBASE_DATABASE_URL_HERE
# Optional: Only required if using Google Analytics for Firebase
# VITE_FIREBASE_MEASUREMENT_ID=INSERT_FIREBASE_MEASUREMENT_ID_HERE

# WebContainer API Configuration
# Base URL for API endpoints
VITE_API_ENDPOINT=http://localhost:3000

# Database Configuration
# PostgreSQL Settings (Default port: 5432)
VITE_PG_USER=postgres
VITE_PG_HOST=localhost
VITE_PG_DATABASE=mydatabase
VITE_PG_PASSWORD=INSERT_PG_PASSWORD_HERE
VITE_PG_PORT=5432

# Redis Configuration (Default port: 6379)
VITE_REDIS_HOST=localhost
VITE_REDIS_PORT=6379
VITE_REDIS_PASSWORD=INSERT_REDIS_PASSWORD_HERE
VITE_REDIS_API_KEY=INSERT_REDIS_API_KEY_HERE
VITE_REDIS_USERNAME=default

# AI Model API Configuration
# Required for AI model integrations
VITE_XAI_API_KEY=INSERT_XAI_API_KEY_HERE
VITE_GROQ_API_KEY=INSERT_GROQ_API_KEY_HERE
VITE_PERPLEXITY_API_KEY=INSERT_PERPLEXITY_API_KEY_HERE
VITE_HUGGINGFACE_TOKEN=INSERT_HUGGINGFACE_TOKEN_HERE
VITE_ANTHROPIC_API_KEY=INSERT_ANTHROPIC_API_KEY_HERE

# Search & Data API Configuration
VITE_GOOGLE_API_KEY=INSERT_GOOGLE_API_KEY_HERE
VITE_SERP_API_KEY=INSERT_SERP_API_KEY_HERE
VITE_PINECONE_API_KEY=INSERT_PINECONE_API_KEY_HERE

# GitHub Configuration
# Required for GitHub integration features
VITE_GITHUB_TOKEN=INSERT_GITHUB_TOKEN_HERE
VITE_GITHUB_USERNAME=INSERT_GITHUB_USERNAME_HERE
VITE_GITHUB_EMAIL=INSERT_GITHUB_EMAIL_HERE

# Tools Configuration
VITE_TOOLHOUSE_API_KEY=INSERT_TOOLHOUSE_API_KEY_HERE

# Support Configuration
VITE_SUPPORT_EMAIL=support@example.com

# Environment Configuration
# Set to 'true' for development, 'false' for production
VITE_DEV=false

# AI Model Configuration
VITE_AI_MODEL_TEMPERATURE=0.7
VITE_AI_MAX_TOKENS=4096
VITE_AI_TOP_P=0.9
VITE_AI_FREQUENCY_PENALTY=0.0
VITE_AI_PRESENCE_PENALTY=0.0

# AI Performance Settings
VITE_AI_TIMEOUT=30000
VITE_AI_RETRY_ATTEMPTS=3
VITE_AI_BATCH_SIZE=32

# AI Feature Flags
VITE_AI_STREAMING_ENABLED=true
VITE_AI_CACHING_ENABLED=true
VITE_AI_LOGGING_ENABLED=true
